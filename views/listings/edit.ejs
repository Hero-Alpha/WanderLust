<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2"></div>
</div>

    <body>
        <h1>Edit listings data</h1><br>
        <form action="/listings/<%= listingData._id %>?_method=PUT" method="post">
            
            <div>
                <label for="title" class="form-label">Title</label>
                <input class="form-control" type="text" name="listing[title]" value="<%= listingData.title %>"><br><br>
            </div>
            <div>
                <label for="description" class="form-label">Description</label>
                <textarea cols="20" rows="6" class="form-control" name="listing[description]"><%= listingData.description%></textarea><br><br>
            </div>
            <div>
                <label for="image" class="form-label">Image URL</label>
                <input class="form-control" type="text" name="listing[url]" value="<%= listingData.image.url %>"><br><br>
            </div>
            <div class="col-md-4">
                <label for="price" class="form-label">Price</label>
                <input class="form-control" type="number" name="listing[price]" value="<%= listingData.price %>"><br><br>
            </div>
            <div class="col-md-8">
                <label for="country" class="form-label">Country</label>
                <input class="form-control" type="text" name="listing[country]" value="<%= listingData.country %>"><br><br>
            </div>
            <div>
                <label for="location" class="form-label">Location</label>
                <input class="form-control" type="text" name="listing[location]" value="<%= listingData.location %>"><br><br>
            </div>


            <button class="btn btn-dark edit-btn col-12">Edit</button><br><br>
        </form>
    </body>