<% layout("/layouts/boilerplate") %>
    <style>
        .filters {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }

        .filter {
            display: flex;
            flex-direction: column;
            align-items: center;
            height: auto;
            margin: .6rem;
            padding-bottom: 1rem;
            text-align: center;
            border-bottom: 4px solid rgb(255, 255, 255);
            transition: opacity 0.3s ease, border-bottom 0.3s ease;
            opacity: 0.7;
            cursor: pointer;
        }

        .filter i {
            font-size: 1.6rem;
        }

        .filter:hover i {
            color: rgb(50, 50, 50);
        }

        .filter:hover {
            opacity: 1;
            border-bottom: 4px solid rgb(117, 117, 117);
        }

        .tax-toggle{
            height: 4rem !important;
            position: relative !important;
            display: flex;
            flex-direction: row-reverse !important;
            align-items: center;
            border: 1px solid rgb(129, 129, 129);
            border-radius: 1.2rem;
            padding: .7rem !important;
            font-weight: bold;
        }

        .tax-toggle:hover{
            background-color: #f0f0f0 !important;
            border: 2px solid black;
        }

        .form-check-input{
            height: 1.3rem !important;
            margin: .1rem -2.8rem 0 .7rem !important;
            
        }
        .taxAmount{
            display: none;
        }
    </style>

    <div class="filters">
        <div class="filter">
            <i class="fa-solid fa-water-ladder"></i>
            Amazing pools
        </div>
        <div class="filter">
            <i class="fa-solid fa-golf-ball-tee"></i>
            Golfing
        </div>
        <div class="filter">
            <i class="fa-solid fa-couch"></i>
            Rooms
        </div>
        <div class="filter">
            <i class="fa-solid fa-fire"></i>
            Trending
        </div>
        <div class="filter">
            <i class="fa-regular fa-snowflake"></i>
            Arctic
        </div>
        <div class="filter">
            <i class="fa-solid fa-palette"></i>
            Creative
        </div>
        <div class="filter">
            <i class="fa-solid fa-key"></i>
            New
        </div>
        <div class="filter">
            <i class="fa-solid fa-umbrella-beach"></i>
            Beach
        </div>
        <div class="filter">
            <i class="fa-brands fa-fort-awesome"></i>
            Castle
        </div>
        <div class="filter">
           
        </div>
        
        <!-- tax switch -->
         <div class="tax-toggle">
             <div class="form-check form-switch form-check-reverse">
                 <input class="form-check-input background-dark" type="checkbox" id="flexSwitchCheckReverse">
                 <label class="form-check-label" for="flexSwitchCheckReverse">Display total after taxes</label>
             </div>
        </div>
    </div>


    <!-- <div class="container"> -->
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1 mt-3">
        <% for (let listing of allListings) { %>
            <div class="col mb-4">
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b>
                                <br>
                                &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                                <i class="taxAmount">&nbsp;&nbsp;+ 18% GST </i>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <% } %>
    </div>
    
    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckReverse");
        taxSwitch.addEventListener("click",()=>{
            let taxShow = document.getElementsByClassName("taxAmount");
            console.log(taxShow);

            for(info of taxShow){
                if(info.style.display != "inline"){
                    info.style.display = "inline";
                }
                else{
                    info.style.display = "none";
                }
            }
        });
    </script>