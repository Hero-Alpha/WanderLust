<% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show d-flex justify-content-between align-items-center col-5 ms-auto p-3" role="alert">
        <span><%= success %></span>
        <button type="button" class="btn-close ms-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(deleted && deleted.length) { %>
    <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-between align-items-center col-5 ms-auto p-3" role="alert">
        <span><%= deleted %></span>
        <button type="button" class="btn-close ms-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(edited && edited.length) { %>
    <div class="alert alert-info alert-dismissible fade show d-flex justify-content-between align-items-center col-5 ms-auto p-3" role="alert">
        <span><%= edited %></span>
        <button type="button" class="btn-close ms-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-between align-items-center col-5 ms-auto p-3" role="alert">
        <span><%= error %></span>
        <button type="button" class="btn-close ms-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
